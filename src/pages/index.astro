---
import Layout from "../layouts/Layout.astro";
import TypingIntro from "../components/TypingIntro";
import Card from "../components/Card.astro";
---

<Layout title="Home">
	<div class="flex justify-center space-x-8 mt-20 items-center">
		<div class="flex flex-col w-[600px] h-full">
			<div class="text-5xl">Hi! I'm Eddy.</div>
			<div class="text-5xl mt-2">
				I'm a
				<span class="inline-block text-blue-500 mr-1">
					<TypingIntro client:load />
				</span>at UIUC.
			</div>
			<div class="text-2xl mt-8">
				I am a BSCS student interested in AI alignment, transparent
				machine learning, and software engineering.
			</div>
		</div>

		<div class="w-[320px] h-[320px] bg-blue-500"></div>
	</div>
	<div class="flex justify-center mt-20 space-x-16">
		<Card
			heading="Latest post:"
			title="Hello, World!"
			body="Celebrating the launch of my website (soon)"
		/>

		<Card
			heading="What I'm working on:"
			title="This website!"
			body="It is indeed what I am working on"
		/>
	</div>
</Layout>
