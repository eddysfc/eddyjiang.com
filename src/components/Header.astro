---
import HeaderLink from "../components/HeaderLink";
import BigHeaderLink from "../components/BigHeaderLink";
const currentPage = Astro.url.pathname;
---

<header class="flex justify-center items-center mt-4 space-x-24">
    <div class="text-2xl space-x-24">
        <HeaderLink text="About" link="/about" currentPage={currentPage} />
        <HeaderLink
            text="Projects"
            link="/projects"
            currentPage={currentPage}
        />
        <HeaderLink
            text="Research"
            link="/research"
            currentPage={currentPage}
        />
    </div>

    <BigHeaderLink text="Eddy Jiang" link="/" currentPage={currentPage} />

    <div class="text-2xl space-x-24">
        <HeaderLink text="Posts" link="/posts" currentPage={currentPage} />
        <HeaderLink text="Resume" link="/resume" currentPage={currentPage} />
        <HeaderLink text="Contact" link="/contact" currentPage={currentPage} />
    </div>
</header>
