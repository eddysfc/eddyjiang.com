---
interface Props {
    type: string;
    title: string;
    body?: string;
    href?: string;
}
const { type, title, body, href } = Astro.props;
---

<div class="w-[500px] border border-gray-300 shadow-lg rounded-lg px-8 py-6">
    <div class="text-3xl font-semibold">Latest {type}:</div>
    <div class="text-2xl text-blue-500 mt-6">{title}</div>
    <div class="text-xl mt-2">{body}</div>
    <a href={href}>
        <button
            class="mt-6 text-xl text-white bg-blue-500 px-4 py-1 rounded-lg hover:bg-blue-400"
        >
            Read More
        </button>
    </a>
</div>
