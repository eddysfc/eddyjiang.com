---
interface Props {
    heading: string;
    title: string;
    description: string;
    href?: string;
}
const { heading, title, description, href } = Astro.props;
---

<div class="w-[500px] border border-gray-300 shadow-lg rounded-lg px-8 py-6">
    <div class="text-3xl font-semibold">{heading}</div>
    <div class="text-2xl text-blue-500 mt-6">{title}</div>
    <div class="text-xl mt-2">{description}</div>
    <a href={href}>
        <button
            class="mt-6 text-xl text-white bg-blue-500 px-4 py-1 rounded-lg hover:bg-blue-400"
        >
            Read More
        </button>
    </a>
</div>
