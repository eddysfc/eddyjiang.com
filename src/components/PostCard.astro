---
const { title, date, description, slug } = Astro.props;
import { formatDate } from "../utils/formatDate";
import { FaRegCalendar } from "react-icons/fa6";
---

<article
    class="mt-8 mb-12 border border-gray-300 shadow-lg rounded-lg px-12 py-8"
>
    <h2 class="text-4xl text-blue-500">
        {title}
    </h2>
    <div class="mt-4 flex items-center">
        <FaRegCalendar size={24} />
        <span class="ml-2 text-2xl">
            {formatDate(date)}
        </span>
    </div>
    <p class="mt-4 text-2xl leading-relaxed">
        {description}
    </p>
    <a
        href={`/posts/${slug}`}
        class="mt-4 inline-block text-2xl text-white bg-blue-500 px-4 py-1 rounded-lg duration-300 hover:bg-blue-400"
    >
        Read More
    </a>
</article>
