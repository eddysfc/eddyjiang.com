---
const { title, date, description, slug } = Astro.props;
import { formatDate } from "../utils/formatDate";
---

<article
    class="mt-8 mb-16 border border-gray-300 shadow-lg rounded-lg px-12 py-8"
>
    <h2 class="text-4xl text-blue-500">
        {title}
    </h2>
    <p class="mt-2 text-xl">
        {formatDate(date)}
    </p>
    <p class="mt-6 text-2xl leading-relaxed">
        {description}
    </p>
    <a
        href={`/posts/${slug}`}
        class="mt-6 inline-block text-2xl text-white bg-blue-500 px-4 py-1 rounded-lg duration-300 hover:bg-blue-400"
    >
        Read More
    </a>
</article>
