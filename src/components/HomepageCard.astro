---
interface Props {
    heading: string;
    title: string;
    date: string;
    href: string;
}
const { heading, title, date, href } = Astro.props;
---

<div class="w-1/3 border border-gray-300 shadow-lg rounded-lg px-8 py-6">
    <h2 class="text-3xl font-semibold">{heading}</h2>
    <h3 class="text-2xl text-blue-500 mt-4">{title}</h3>
    <p class="text-2xl mt-2">{date}</p>
    <a
        href={href}
        class="mt-4 inline-block text-2xl text-white bg-blue-500 px-4 py-1 rounded-lg duration-300 hover:bg-blue-400"
    >
        Read More
    </a>
</div>
