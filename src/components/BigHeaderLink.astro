---
const { text, link, currentPage } = Astro.props;
const isActive =
    link === "/" ? currentPage === "/" : currentPage.startsWith(link);
---

<div class="text-4xl">
    <a href={link}>
        <span class="relative group">
            {text}
            <span
                class={`absolute bottom-0 translate-y-1 h-0.5 bg-black left-0 w-full rounded-full ${isActive ? "opacity-100" : "opacity-0 transition-all duration-300 group-hover:opacity-100"}`}
            ></span>
        </span>
    </a>
</div>
